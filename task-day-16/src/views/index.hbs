<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
                <link
            rel='icon'
            href='/assets/images/icon-light.png'
            type='image/x-icon'
        />
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/assets/styles/custom.css' />
        <link rel='stylesheet' href='/assets/styles/home.css' />
        <link rel='stylesheet' href='/assets/styles/showcase.css' />
        <title>Home | Personal Web</title>
    </head>
    <body>
        <nav
            class='navbar navbar-expand-lg bg-body-tertiary shadow position-fixed top-0 z-1 w-100'
        >
            <div class='container-fluid'>
                <a class='navbar-brand me-5 p-0' href='#'>
                    <img
                        src='/assets/images/icon.png'
                        width='60'
                        height='50'
                        class='d-inline-block align-text-top'
                    />
                </a>
                <button
                    class='navbar-toggler'
                    type='button'
                    data-bs-toggle='collapse'
                    data-bs-target='#navbarSupportedContent'
                    aria-controls='navbarSupportedContent'
                    aria-expanded='false'
                    aria-label='Toggle navigation'
                >
                    <span class='navbar-toggler-icon'></span>
                </button>
                <div
                    class='collapse navbar-collapse'
                    id='navbarSupportedContent'
                >
                    <ul class='navbar-nav me-auto mb-0'>
                        <li class='nav-item'>
                            <a
                                class='nav-link fw-semibold active'
                                aria-current='page'
                                href='#'
                            >
                                Home
                            </a>
                        </li>
                        {{#if auth.isLoggedIn}}
                        <li class='nav-item'>
                            <a class='nav-link fw-semibold' href='/project'>
                                Add Project
                            </a>
                        </li>
                        {{/if}}
                        <li class='nav-item'>
                            <a
                                class='nav-link fw-semibold'
                                href='/testimonials'
                            >
                                Testimonials
                            </a>
                        </li>
                    </ul>

                    <ul class='navbar-nav align-items-lg-center gap-lg-3'>
                        {{#unless auth.isLoggedIn}}
                        <li class='nav-item'>
                            <a class='nav-link fw-semibold' href='/login'>
                                Log In
                            </a>
                        </li>
                        <li class='nav-item mb-2 mb-lg-0'>
                            <a class='nav-link fw-semibold' href='/signup'>
                                Sign Up
                            </a>
                        </li>
                        {{/unless}}
                        <li class='nav-item'>
                            <form class='d-flex mb-0' role='search'>
                                <a href='/contact' class='btn btn-dark'>
                                    Contact Me
                                </a>
                            </form>
                        </li>
                        {{#if auth.isLoggedIn}}
                        <li class='nav-item d-none d-lg-block'>
                            <div class='btn-group'>
                                <button
                                    type='button'
                                    class='dropdown-btn btn dropdown-toggle py-0'
                                    data-bs-toggle='dropdown'
                                    aria-expanded='false'
                                >
                                    <img
                                        src='https://api.dicebear.com/8.x/thumbs/svg?backgroundColor=252525&shapeColor=ffffff&mouth=variant2&eyes=variant4W10'
                                        class='rounded-circle'
                                        width='40'
                                        height='40'
                                        alt='profile picture'
                                        style="border: 2px solid #252525"
                                    />
                                </button>
                                <ul class='dropdown-menu dropdown-menu-end'>
                                    <li class='px-3'>
                                        <p class='m-0'>
                                            {{auth.user.username}}
                                        </p>
                                    </li>
                                    <li class='px-3'>
                                        <p class='m-0'>
                                            {{auth.user.email}}
                                        </p>
                                    </li>
                                    <li>
                                        <hr class='dropdown-divider' />
                                    </li>
                                    <li>
                                        <a class='dropdown-item' href='/logout'>
                                            Log out
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class='nav-item d-block d-lg-none'>
                            <a class='nav-link fw-semibold' href='/logout'>
                                Log Out
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>

        <div
            class='container w-100 d-flex align-items-center p-0'
            style='margin-top: 11rem; max-width: 1115px;'
        >
            <div
                class='profile-card card shadow d-flex gap-5 flex-column flex-lg-row'
                style='border-radius: 15px;'
            >
                <div
                    class='card-item flex-grow-1 d-flex flex-column align-items-center justify-content-lg-center align-items-lg-start'
                >
                    <h1 class='title fw-bold'>Hi, Ardi here.</h1>
                    <p class='description text-center text-lg-start'>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Vitae veritatis perspiciatis sint, pariatur sit
                        repudiandae dolore necessitatibus ipsum molestias
                        explicabo fugiat exercitationem architecto incidunt
                        nihil iusto asperiores recusandae ipsa nulla sapiente
                        tenetur, saepe enim? Molestiae illo voluptas, magnam
                        labore unde, ipsa temporibus dolorem tempora voluptatum
                        delectus tempore placeat nam minus facilis quam deleniti
                        iste vitae neque maxime cumque totam illum odit! Quas
                        sapiente quo dolore quam nemo a nesciunt ex est
                        adipisci. Nesciunt, est magnam.
                    </p>
                    <div
                        class='download-group mt-4 d-flex gap-3 align-items-center'
                    >
                        <a
                            href='/contact'
                            class='btn btn-dark contact-btn'
                        >Contact me</a>
                        <a
                            href='/assets/docs/resume.pdf'
                            class='link-underline link-underline-opacity-0 text-dark'
                        >
                            download CV
                            <i class='fa-solid fa-download download-icon'></i>
                        </a>
                    </div>
                    <div class='socmed-group d-flex gap-3 mt-4'>
                        <a
                            href='https://www.linkedin.com/in/yudistiraardi/'
                            class='link-underline link-underline-opacity-0 text-dark'
                        >
                            <i class='fa-brands fa-linkedin fs-3'></i>
                        </a>
                        <a
                            href='https://www.instagram.com/arrdix'
                            class='link-underline link-underline-opacity-0 text-dark'
                        >
                            <i class='fa-brands fa-instagram fs-3'></i>
                        </a>
                        <a
                            href='https://www.facebook.com'
                            class='link-underline link-underline-opacity-0 text-dark'
                        >
                            <i class='fa-brands fa-facebook fs-3'></i>
                        </a>
                        <a
                            href='https://www.twitter.com'
                            class='link-underline link-underline-opacity-0 text-dark'
                        >
                            <i class='fa-brands fa-twitter fs-3'></i>
                        </a>
                    </div>
                </div>
                <div
                    class='card-item d-flex flex-column align-items-center flex-shrink-1'
                >
                    <div class='card' style='width: 250px; border-radius: 15px'>
                        <img
                            src='/assets/images/profile-pic-black.png'
                            class='card-img-top'
                            alt='profile picture'
                            style='border-top-left-radius: 15px; border-top-right -radius: 15px'
                        />
                        <div
                            class='card-body d-flex flex-column align-items-center'
                        >
                            <h5 class='card-title'>Fullstack Developer</h5>
                            <p class='card-text'>Yudistira Ardi</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class='wrapper projects'>
            <div class='showcase'>
                {{#each projects}}
                    <div class='project-card shadow'>
                        <a
                            href='/detail/{{this.id}}'
                            class='project-detail-link'
                        >
                            <img
                                src='/assets/uploads/{{this.image}}'
                                class='project-image'
                                alt='Project image'
                            />
                            <h2 class='project-title'>{{this.name}}</h2>
                        </a>
                        <p class="project-author">
                            Developed by
                            <span class="uppercase">{{this.author.username}}</span>
                        </p>
                        <p class='project-duration'>{{this.duration}}</p>
                        <p class='project-summary'>
                            {{this.summary}}
                        </p>
                        <div class='tech-group'>
                            {{{this.techHTML}}}
                        </div>
                        {{#if ../auth.isLoggedIn}}
                        <div class='button-group'>
                            <a
                                href='/edit-project/{{this.id}}'
                                class='edit-btn'
                            >
                                Edit
                            </a>
                            <button class='delete-btn' data-id='{{this.id}}'>
                                Delete
                            </button>
                        </div>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>

        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://kit.fontawesome.com/c64e7a230f.js'
            crossorigin='anonymous'
        ></script>
        <script src='/scripts/views/showcase.js' type='module'></script>
    </body>
</html>