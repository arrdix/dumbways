<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/assets/styles/custom.css' />
        <link rel='stylesheet' href='/assets/styles/testimonials.css' />
        <title>Testimonials | Personal Web</title>
    </head>
    <body>
        <nav
            class='navbar navbar-expand-lg bg-body-tertiary shadow position-fixed top-0 z-1 w-100'
        >
            <div class='container-fluid'>
                <a class='navbar-brand me-5 p-0' href='#'>
                    <img
                        src='/assets/images/icon.png'
                        width='60'
                        height='50'
                        class='d-inline-block align-text-top'
                    />
                </a>
                <button
                    class='navbar-toggler'
                    type='button'
                    data-bs-toggle='collapse'
                    data-bs-target='#navbarSupportedContent'
                    aria-controls='navbarSupportedContent'
                    aria-expanded='false'
                    aria-label='Toggle navigation'
                >
                    <span class='navbar-toggler-icon'></span>
                </button>
                <div
                    class='collapse navbar-collapse'
                    id='navbarSupportedContent'
                >
                    <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
                        <li class='nav-item'>
                            <a
                                class='nav-link fw-semibold'
                                aria-current='page'
                                href='/index'
                            >
                                Home
                            </a>
                        </li>
                        {{#if auth.isLoggedIn}}
                            <li class='nav-item'>
                                <a class='nav-link fw-semibold' href='/project'>
                                    Add Project
                                </a>
                            </li>
                        {{/if}}
                        <li class='nav-item'>
                            <a class='nav-link fw-semibold active' href='#'>
                                Testimonials
                            </a>
                        </li>
                    </ul>

                    <ul class='navbar-nav align-items-lg-center gap-lg-3'>
                        {{#unless auth.isLoggedIn}}
                            <li class='nav-item'>
                                <a class='nav-link fw-semibold' href='/login'>
                                    Log In
                                </a>
                            </li>
                            <li class='nav-item mb-2 mb-lg-0'>
                                <a class='nav-link fw-semibold' href='/signup'>
                                    Sign Up
                                </a>
                            </li>
                        {{/unless}}
                        <li class='nav-item'>
                            <form class='d-flex mb-0' role='search'>
                                <a href='/contact' class='btn btn-dark'>
                                    Contact Me
                                </a>
                            </form>
                        </li>
                        {{#if auth.isLoggedIn}}
                            <li class='nav-item d-none d-lg-block'>
                                <div class='btn-group'>
                                    <button
                                        type='button'
                                        class='dropdown-btn btn dropdown-toggle py-0'
                                        data-bs-toggle='dropdown'
                                        aria-expanded='false'
                                    >
                                        <img
                                            src='https://api.dicebear.com/8.x/thumbs/svg?backgroundColor=252525&shapeColor=ffffff&mouth=variant2&eyes=variant4W10'
                                            class='rounded-circle'
                                            width='40'
                                            height='40'
                                            alt='profile picture'
                                            style='border: 2px solid #252525'
                                        />
                                    </button>
                                    <ul class='dropdown-menu dropdown-menu-end'>
                                        <li class='px-3'>
                                            <p class='m-0'>
                                                {{auth.user.username}}
                                            </p>
                                        </li>
                                        <li class='px-3'>
                                            <p class='m-0'>
                                                {{auth.user.email}}
                                            </p>
                                        </li>
                                        <li>
                                            <hr class='dropdown-divider' />
                                        </li>
                                        <li>
                                            <a
                                                class='dropdown-item'
                                                href='/logout'
                                            >
                                                Log out
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class='nav-item d-block d-lg-none'>
                                <a class='nav-link fw-semibold' href='/logout'>
                                    Log Out
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>

        <div class='wrapper'>
            <h1>What People Say</h1>
            <div class='filter'>
                <button class='filter-btn' rating='0'>All</button>
                <button class='filter-btn' rating='1'>
                    1
                    <i class='fa-solid fa-star'></i>
                </button>
                <button class='filter-btn' rating='2'>
                    2
                    <i class='fa-solid fa-star'></i>
                </button>
                <button class='filter-btn' rating='3'>
                    3
                    <i class='fa-solid fa-star'></i>
                </button>
                <button class='filter-btn' rating='4'>
                    4
                    <i class='fa-solid fa-star'></i>
                </button>
                <button class='filter-btn' rating='5'>
                    5
                    <i class='fa-solid fa-star'></i>
                </button>
            </div>
            <div class='testimonials'></div>
        </div>

        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://kit.fontawesome.com/c64e7a230f.js'
            crossorigin='anonymous'
        ></script>
        <script src='/scripts/views/testimonials.js' type='module'></script>
    </body>
</html>