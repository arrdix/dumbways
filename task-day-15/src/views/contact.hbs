<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/assets/styles/custom.css' />
        <title>Contact | Personal Web</title>
    </head>
    <body>
        <nav
            class='navbar navbar-expand-lg bg-body-tertiary shadow position-fixed top-0 z-1 w-100'
        >
            <div class='container-fluid'>
                <a class='navbar-brand me-5 p-0' href='#'>
                    <img
                        src='/assets/images/icon.png'
                        width='50'
                        height='40'
                        class='d-inline-block align-text-top'
                    />
                </a>
                <button
                    class='navbar-toggler'
                    type='button'
                    data-bs-toggle='collapse'
                    data-bs-target='#navbarSupportedContent'
                    aria-controls='navbarSupportedContent'
                    aria-expanded='false'
                    aria-label='Toggle navigation'
                >
                    <span class='navbar-toggler-icon'></span>
                </button>
                <div
                    class='collapse navbar-collapse'
                    id='navbarSupportedContent'
                >
                    <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
                        <li class='nav-item'>
                            <a
                                class='nav-link fw-semibold'
                                aria-current='page'
                                href='/index'
                            >Home</a>
                        </li>
                        <li class='nav-item'>
                            <a class='nav-link fw-semibold' href='/project'>Add
                                Project</a>
                        </li>
                        <li class='nav-item'>
                            <a
                                class='nav-link fw-semibold'
                                href='/testimonials'
                            >Testimonials</a>
                        </li>
                    </ul>
                    <form class='d-flex mb-0' role='search'>
                        <a href='#' class='btn btn-dark'> Contact Me </a>
                    </form>
                </div>
            </div>
        </nav>

        <div
            class='container w-75 d-flex flex-column align-items-center'
            style='margin-block: 7rem'
        >
            <h1 class='title fw-bold'>GET IN TOUCH</h1>
            <form
                action=''
                class='mt-3 w-100 d-flex flex-column align-items-center form-contact'
            >
                <div class='form-item w-50'>
                    <label for='input-name' class='form-label'>Name</label>
                    <input
                        name='name'
                        type='text'
                        class='form-control mb-1'
                        id='input-name'
                    />
                    <p class='input-name-warning invisible mb-0 text-danger'>
                        Please insert name.
                    </p>
                </div>

                <div class='form-item w-50'>
                    <label for='input-email' class='form-label'>Email</label>
                    <input
                        name='email'
                        type='email'
                        class='form-control mb-1'
                        id='input-email'
                    />
                    <p class='input-email-warning invisible mb-0 text-danger'>
                        Please insert email.
                    </p>
                </div>

                <div class='form-item w-50'>
                    <label for='input-phone' class='form-label'>Phone Number</label>
                    <input
                        name='phone'
                        type='tel'
                        class='form-control mb-1'
                        id='input-phone'
                    />
                    <p class='input-phone-warning invisible mb-0 text-danger'>
                        Please insert phone number.
                    </p>
                </div>

                <div class='form-item w-50'>
                    <label for='input-subject' class='form-label'>
                        Subject
                    </label>
                    <select
                        class='form-select mb-1'
                        id='input-subject'
                        name='subject'
                    >
                        <option selected></option>
                        <option value='Collaboration'>Collaboration</option>
                        <option value='Greeting'>Greeting</option>
                        <option value='Offering'>Offering</option>
                    </select>
                    <p class='input-subject-warning invisible mb-0 text-danger'>
                        Please pick a subject.
                    </p>
                </div>

                <div class='form-item w-50'>
                    <label for='input-message' class='form-label'>
                        Your Message
                    </label>
                    <textarea
                        name='message'
                        class='form-control mb-1'
                        id='input-message'
                        rows='3'
                    ></textarea>
                    <p class='input-message-warning invisible mb-0 text-danger'>
                        Please insert message.
                    </p>
                </div>

                <div class='form-item mb3 w-50 d-flex justify-content-end'>
                    <button class='btn btn-dark px-5'>Submit</button>
                </div>
            </form>
        </div>

        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://kit.fontawesome.com/c64e7a230f.js'
            crossorigin='anonymous'
        ></script>
        <script src='/scripts/views/contact.js' type='module'></script>
    </body>
</html>