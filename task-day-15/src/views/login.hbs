<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/assets/styles/custom.css' />
        <title>Login | Personal Web</title>
    </head>
    <body>
        <div
            class='container-fluid d-flex justify-content-center align-items-center'
            style='height: 100vh'
        >
            <div
                class='card p-3 rounded-4 border-0 shadow-sm d-flex flex-row justify-content-center'
                style='height: 75vh; width: 1000px'
            >
                <div class='card-item w-100'>
                    <img
                        src='/assets/images/login.jpg'
                        class='w-100 h-100 rounded-4'
                        alt=''
                    />
                </div>
                <div
                    class='card-item p-3 w-100 d-flex flex-column align-items-center justify-content-center'
                >
                    <h4 class='title fw-bold'>Hello Again!</h4>
                    <p class='subtitle'>We are happy to see you back here.</p>
                    <form
                        action=''
                        class='mt-3 w-100 d-flex flex-column align-items-center form-login'
                    >
                        <div class='form-item w-75'>
                            <input
                                type='text'
                                class='form-control mb-1'
                                id='input-username'
                                placeholder='Username'
                            />
                            <p
                                class='input-username-warning invisible mb-0 text-danger'
                            >
                                Please input an username.
                            </p>
                        </div>

                        <div class='form-item w-75'>
                            <input
                                type='password'
                                class='form-control mb-1'
                                id='input-password'
                                placeholder='Password'
                            />
                            <p
                                class='input-password-warning invisible mb-0 text-danger'
                            >
                                Please input a password.
                            </p>
                        </div>

                        <div class='form-item mb-3 w-75'>
                            <button class='btn btn-dark px-5 w-100'>
                                Submit
                            </button>
                        </div>
                    </form>
                    <div
                        class='signup-group w-75 d-flex flex-column gap-1 align-items-center'
                    >
                        <p class='m-0'>
                            Don't have an account?
                            <a
                                href='/signup'
                                class='link-underline-dark text-dark'
                            >Sign Up.</a>
                        </p>
                        <p class='mt-4 mb-1'>Or continue with</p>
                        <div
                            class='third-party-group d-flex justify-content-center gap-3'
                        >
                            <a href='#' class='third-party text-dark'>
                                <i class='fa-brands fa-google fs-1 p-3'></i>
                            </a>
                            <a href='#' class='third-party text-dark'>
                                <i class='fa-brands fa-apple fs-1 p-3'></i>
                            </a>
                            <a href='#' class='third-party text-dark'>
                                <i class='fa-brands fa-github fs-1 p-3'></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://kit.fontawesome.com/c64e7a230f.js'
            crossorigin='anonymous'
        ></script>
    </body>
</html>