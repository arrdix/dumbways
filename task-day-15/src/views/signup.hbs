<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/assets/styles/custom.css' />
        <link rel='stylesheet' href='/assets/styles/signup.css' />
        <title>Signup | Personal Web</title>
    </head>
    <body>
        <div
            class='container-fluid d-flex justify-content-center align-items-center'
            style='height: 100%'
        >
            <div
                class='auth-card card p-3 rounded-4 border-0 shadow-sm d-flex flex-row justify-content-center'
            >
                <div class='card-item w-100'>
                    <img
                        src='https://api.dicebear.com/8.x/thumbs/svg?backgroundColor=000000&shapeColor=ffffff&eyes=variant9W16&mouth=variant4&size=500&scale=75&translateX=-10&translateY=25&eyesColor=000000&mouthColor=000000'
                        class='w-100 h-100 rounded-4 object-fit-cover'
                        alt='avatar background'
                    />
                </div>
                <div
                    class='card-item p-3 w-100 d-flex flex-column align-items-center justify-content-center'
                >
                    <h4 class='title fw-bold'>Create Account</h4>
                    <p class='subtitle'>
                        There's a first time for everything, right?
                    </p>
                    <form
                        action=''
                        class='mt-3 w-100 d-flex flex-column align-items-center form-signup'
                    >
                        <div class='form-item w-75 mb-2'>
                            <input
                                type='text'
                                class='form-control mb-1'
                                id='input-username'
                                placeholder='Username'
                            />
                            <p
                                class='input-warning input-username-warning invisible mb-2 text-danger'
                            >
                                Please input an username.
                            </p>
                        </div>

                        <div class='form-item w-75 mb-2'>
                            <input
                                type='email'
                                class='form-control mb-1'
                                id='input-email'
                                placeholder='Email'
                            />
                            <p
                                class='input-warning input-email-warning invisible mb-2 text-danger'
                            >
                                Please input an email.
                            </p>
                        </div>

                        <div class='form-item w-75 mb-2'>
                            <div class='input-group'>
                                <input
                                    type='password'
                                    class='form-control'
                                    id='input-password'
                                    placeholder='Password'
                                    aria-describedby='btnGroupAddon'
                                />
                                <button
                                    type='button'
                                    class='password-exposer input-group-text d-flex justify-content-center'
                                    id='btnGroupAddon'
                                    style='min-width: 50px'
                                >
                                    <i
                                        class='password-exposer-icon fa-solid fa-eye-slash fa-eye'
                                    ></i>
                                </button>
                            </div>
                            <p
                                class='input-warning input-password-warning invisible mb-2 mt-1 text-danger'
                            >
                                Please input a password.
                            </p>
                        </div>

                        <div class='form-item mb-3 w-75'>
                            <button class='btn btn-dark px-5 w-100'>
                                Sign Up
                            </button>
                        </div>
                    </form>
                    <div
                        class='signup-group w-75 d-flex flex-column gap-1 align-items-center'
                    >
                        <p class='m-0'>
                            Already have an account?
                            <a
                                href='/login'
                                class='link-underline-dark text-dark'
                            >Log in.</a>
                        </p>
                        <p class='mt-4 mb-1'>Or continue with</p>
                        <div
                            class='third-party-group d-flex justify-content-center gap-3'
                        >
                            <a href='/index' class='third-party text-dark'>
                                <i class='fa-brands fa-google fs-1 p-3'></i>
                            </a>
                            <a href='/index' class='third-party text-dark'>
                                <i class='fa-brands fa-apple fs-1 p-3'></i>
                            </a>
                            <a href='/index' class='third-party text-dark'>
                                <i class='fa-brands fa-github fs-1 p-3'></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://kit.fontawesome.com/c64e7a230f.js'
            crossorigin='anonymous'
        ></script>
        <script src='/scripts/views/signup.js' type='module'></script>
    </body>
</html>